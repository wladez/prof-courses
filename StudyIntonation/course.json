			"id": "00202",
			"instructions": "Proposal 1 (Infinitive Construction)",
			"text": "Would you like to visit the museum?",
			"sound": "02Invitations/l2t2.mp3",
			"pitch": "02Invitations/l2t2.pitch",
			"textMarkup": "02Invitations/l2t2.text"
		}, {
			"id": "00203",
			"instructions": "Proposal 2 (Using the Gerund)",
			"text": "Would you be intereseted in going to see an exhibition?",
			"sound": "02Invitations/l2t3.mp3",
			"pitch": "02Invitations/l2t3.pitch",
			"textMarkup": "02Invitations/l2t3.text"
		}, {
			"id": "00204",
			"instructions": "Proposal 3 (\"A why don't...\" proposal)",
			"text": "Would don't you join us for a cup of coffee?",
			"sound": "02Invitations/l2t4.mp3",
			"pitch": "02Invitations/l2t4.pitch",
			"textMarkup": "02Invitations/l2t4.text"
		}, {
			"id": "00205",
			"instructions": "Proposal 4 (\"A how about...\" proposal)",
			"text": "How about going to the theatre tonight?",
			"sound": "02Invitations/l2t5.mp3",
			"pitch": "02Invitations/l2t5.pitch",
			"textMarkup": "02Invitations/l2t5.text"
		}, {
			"id": "00206",
			"instructions": "Accepting the invitation 1",
			"text": "Thank you very much!",
			"sound": "02Invitations/l2t6.mp3",
			"pitch": "02Invitations/l2t6.pitch",
			"textMarkup": "02Invitations/l2t6.text"
		}, {
			"id": "00207",
			"instructions": "Accepting the invitation 2",
			"text": "That would be very nice!",
			"sound": "02Invitations/l2t7.mp3",
			"pitch": "02Invitations/l2t7.pitch",
			"textMarkup": "02Invitations/l2t7.text"
		}, {
			"id": "00208",
			"instructions": "Accepting the invitation 3",
			"text": "Thank you for inviting me!",
			"sound": "02Invitations/l2t8.mp3",
			"pitch": "02Invitations/l2t8.pitch",
			"textMarkup": "02Invitations/l2t8.text"
		}, {
			"id": "00209",
			"instructions": "Accepting the invitation 4",
			"text": "I look for it!",
			"sound": "02Invitations/l2t9.mp3",
			"pitch": "02Invitations/l2t9.pitch",
			"textMarkup": "02Invitations/l2t9.text"
		}, {
			"id": "00210",
			"instructions": "Accepting the invitation 5",
			"text": "Thank you! That would be a pleasure!",
			"sound": "02Invitations/l2t10.mp3",
			"pitch": "02Invitations/l2t10.pitch",
			"textMarkup": "02Invitations/l2t10.text"
		}, {
			"id": "00211",
			"instructions": "Accepting the invitation 6",
			"text": "That's very kind of you! I'd love to come!",
			"sound": "02Invitations/l2t11.mp3",
			"pitch": "02Invitations/l2t11.pitch",
			"textMarkup": "02Invitations/l2t11.text"
		}, {
			"id": "00212",
			"instructions": "Accepting the invitation 7",
			"text": "Thanks! That sounds great!",
			"sound": "02Invitations/l2t12.mp3",
			"pitch": "02Invitations/l2t12.pitch",
			"textMarkup": "02Invitations/l2t12.text"
		}, {
			"id": "00213",
			"instructions": "Accepting the invitation 8",
			"text": "That sounds like fun!",
			"sound": "02Invitations/l2t13.mp3",
			"pitch": "02Invitations/l2t13.pitch",
			"textMarkup": "02Invitations/l2t13.text"
		}, {
			"id": "00214",
			"instructions": "Declining the invitation 1",
			"text": "That's very kind of you, but I don't think I can.",
			"sound": "02Invitations/l2t14.mp3",
			"pitch": "02Invitations/l2t14.pitch",
			"textMarkup": "02Invitations/l2t14.text"
		}, {
			"id": "00215",
			"instructions": "Declining the invitation 2",
			"text": "Thanks! But I don't think I can make it then.",
			"sound": "02Invitations/l2t15.mp3",
			"pitch": "02Invitations/l2t15.pitch",
			"textMarkup": "02Invitations/l2t15.text"
		}]
