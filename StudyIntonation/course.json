			"text": "Looks fantastic!",
			"sound": "03Emotions/l3t11.mp3",
			"pitch": "03Emotions/l3t11.pitch",
			"textMarkup": "03Emotions/l3t11.text"
		}, {
			"id": "00412",
			"instructions": "??",
			"text": "Terrific! I love it!",
			"sound": "03Emotions/l3t12.mp3",
			"pitch": "03Emotions/l3t12.pitch",
			"textMarkup": "03Emotions/l3t12.text"
		}, {
			"id": "00413",
			"instructions": "??",
			"text": "What a wonderful picture!",
			"sound": "03Emotions/l3t13.mp3",
			"pitch": "03Emotions/l3t13.pitch",
			"textMarkup": "03Emotions/l3t13.text"
		}, {
			"id": "00414",
			"instructions": "??",
			"text": "Good job! Congratulations!",
			"sound": "03Emotions/l3t14.mp3",
			"pitch": "03Emotions/l3t14.pitch",
			"textMarkup": "03Emotions/l3t14.text"
		}, {
			"id": "00415",
			"instructions": "??",
			"text": "You are terrific!",
			"sound": "03Emotions/l3t15.mp3",
			"pitch": "03Emotions/l3t15.pitch",
			"textMarkup": "03Emotions/l3t15.text"
		}, {
			"id": "00416",
			"instructions": "??",
			"text": "Do you really thinks so? Thanks!",
			"sound": "03Emotions/l3t16.mp3",
			"pitch": "03Emotions/l3t16.pitch",
			"textMarkup": "03Emotions/l3t16.text"
